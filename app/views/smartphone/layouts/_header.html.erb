<header class="navbar navbar-fixed-top">
    <div class="container">
      <%= link_to image_tag("logo.jpg"), root_path, id: "logo"  %>
          <% if user_signed_in? %>
            <nav>
              <button href="#" class="btn btn-primary navBtn btn-sm pull-right dropdown-toggle menu-btn" data-toggle="dropdown">MENU
              </button>
              <ul class="pull-right dropdown-menu">
                <li><%= link_to "ホーム", root_path, class: "glyphicon glyphicon-home" %></li>
                <% if signed_in? %>
                <li><%= link_to 'プロフィール変更', edit_user_registration_path, class: "glyphicon glyphicon-file" %></li>
                <li><%= link_to 'いどばた', new_event_path, class: "glyphicon glyphicon-edit" %></li>
                <li>
                <li class="divider"></li>
                <li><%= link_to '地域イベント・遊び場', events_path(category_id: 1) %></li>
                <li><%= link_to '病院関連', events_path(category_id: 2) %></li>
                 <li><%= link_to '防犯情報', events_path(category_id: 3) %></li>
                <li><%= link_to '子育て相談', events_path(category_id: 4) %></li>
                <li><%= link_to 'おさがりフリマ', events_path(category_id: 5) %></li>
                <li class="divider"></li>
                <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out" %>
                </li>
               <% else %>
            <li><%= link_to "ログイン", signin_path %></li>
          <% end %>
        </ul>
      </nav>
      <ul id="loginNav">
            <%= search_form_for(@search, url: events_path) do |f| %>
              <li>
              <%= button_tag( class: "btn btn-default btn-sm") do %>
                <%= content_tag :span, "検索", class: "glyphicon glyphicon-search" %>
              </li>
              <li>
              <%= f.text_field :name_cont, :size => "9%" %>
              </li>
              <% end %>
            </ul>
            <% end %>

          <% else %>
          <ul id="unloginNav">
            <li>
                <%= link_to 'ログイン', new_user_session_path %>
            </li>
            <li>
            <%= link_to '無料登録', new_user_registration_path %>
            </li>
            <li><%= link_to "ヘルプ", pages_help_path %></li>
          </ul>
          <% end %>
        </ul>
    </div>
</header>