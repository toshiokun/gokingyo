<div class="page-header">
	<% if params[:category_id] == "1" then %>
		<h1>イベント一覧</h1>
	<% elsif params[:category_id] == "2" then %>
		<h1>病院関連いどばた一覧</h1>
	<% elsif params[:category_id] == "3" then %>
		<h1>遊び場いどばた一覧</h1>
	<% elsif params[:category_id] == "4" then %>
		<h1>子育ていどばた一覧</h1>
	<% elsif params[:category_id] == "5" then %>
		<h1>教育関連いどばた一覧</h1>
	<% else %>
		<h1>いどばた一覧</h1>
	<% end %>
 </div>
 <div class="list-group">
 	<% @events.each do |event| %>
 		<%= link_to(event, class: 'list-group-item') do %>
 		<h4 class="list-group-item-heading">
 		<%= event.name %>
 		</h4>
 		<p class="list-group-item-text">
 			<%= event.created_at.strftime('%Y/%m/%D %H:%M') %>
 		</p>
 		<% end %>
 	<% end %>
 	<%= paginate @events %>
 </div>